<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">

    <ImageView
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/margin_logo"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_size"
        android:layout_marginTop="@dimen/edit_margin_size"
        android:layout_marginRight="@dimen/edit_margin_size"
        android:layout_marginLeft="@dimen/edit_margin_size"
        android:hint="@string/email"
        android:padding="@dimen/et_padding"
        android:background="@drawable/shape"
        android:textSize="@dimen/text_size"
        android:textColorHint="@color/youngskyblue"
        android:textColor="@color/skyblue"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_size"
        android:layout_marginTop="@dimen/edit_margintop_size"
        android:layout_marginRight="@dimen/edit_margin_size"
        android:layout_marginLeft="@dimen/edit_margin_size"
        android:padding="@dimen/et_padding"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:background="@drawable/shape"
        android:textSize="@dimen/text_size"
        android:textColorHint="@color/youngskyblue"
        android:textColor="@color/skyblue"/>
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:layout_marginTop="@dimen/margin"
        android:padding="@dimen/button_padding"
        android:text="@string/login"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/edit_margin_size"
        android:gravity="center">
        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot"
            android:textSize="@dimen/footer_size"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |   "
            android:textSize="@dimen/footer_size"
            />
        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:clickable="true"
            android:onClick="toRegister"
            android:textSize="@dimen/footer_size"
            />
    </LinearLayout>


</LinearLayout>
